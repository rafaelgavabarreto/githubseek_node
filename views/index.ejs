<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ./navbar%>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>
    <% if (first_page != true) { %>
      <form method="POST" action="/<%= current_page - 1%>">
    <% } %>
        <input type="submit" value="Last Page"/>
      </form>

    <% if (final_page != true) { %>
      <form method="POST" action="/<%= current_page + 1%>">
    <% } %>
        <input type="submit" value="Next Page"/>
      </form>

    <% for (var result in database) { %>
      <ul>
        <tr><td>
        <img src="<%= database[result].image_thumb_url %>">
      </td>
      <td>
        <li>Name: <%= database[result].name %></li>
        <li>$ <%= database[result].price_in_cents %></li>
        <li><%= database[result].package %></li>
        <li>Made in: <%= database[result].origin %></li>
        <li>By: <%= database[result].producer_name %></li>
        <li>Release Date: <%= database[result].released_on %></li>
        <li>Style: <%= database[result].style %></li>
        <form method="GET" action="/api/details/detail/<%= database[result].id %>">
          <input type="submit" value="Details"/>
        </form>
      </td>
      </tr>
      </ul> 
    <% } %>
  </body>
</html>
